<div class='row'>
  <div class='col-md-6 col-md-offset-3'>
    <h1>Editing Book</h1>
    <%= form_for(@post) do |f| %>

    <% if @post.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <p><%= @post.errors.count %>件のエラーが発生しました。</p>
        <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field row">
      <%= f.label :title %><br />
      <%= f.text_field :title, class: "col-xs-12" %>
    </div>

    <div class="field row">
      <%= f.label :opinion %><br />
      <%= f.text_area :opinion, class: "col-xs-12" %>
    </div>

    <div class="actions row">
      <%= f.submit 'Update Book', class: "btn btn-primary col-xs-12" %>
    </div>
    <% end %>

    <%= link_to "Show", post_path(@post.id) %> |
    <%= link_to "Back", posts_path %>
  </div>
</div>
<div class='col-xs-3'>
  <%= render 'users/list', user: @user %>
  <%= render 'posts/list', postup: @postup %>
</div>
<div class='col-xs-9'>
  <h2>Books</h2>

  <table class='table table-hover table-inverse'>
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <% @user.posts.each do |post| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg" %></td>
        <td><%= link_to (post.title), post_path(post.id) %></td>
        <td><%= post.opinion %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>